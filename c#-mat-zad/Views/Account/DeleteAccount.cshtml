@model string
@{
    ViewData["Title"] = "Zrušit účet";
}

<h2>Zrušit účet</h2>

<form asp-action="DeleteAccount" method="post">
    <div class="mb-3">
        <label for="password" class="form-label">Zadej heslo pro potvrzení:</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-danger">Zrušit účet</button>
    <a asp-controller="Note" asp-action="Index" class="btn btn-secondary">Zpět</a>
</form>

@if (!string.IsNullOrEmpty(Model))
{
    <div class="text-danger mt-2">@Model</div>
}
